@model RedeSocial.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="border rounded p-3">
        <!-- Perfil do Usuário -->
        <div class="row align-items-center mb-4">
            <div class="col" style="color: black;">
                <h2 class="mb-1">@Model.usuarioNome</h2>
                <p class="mb-0"><strong>Telefone:</strong> @Model.usuarioTelefone</p>
                <p class="mb-0"><strong>E-mail:</strong> @Model.usuarioEmail</p>
            </div>
            <div class="col-auto">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-gear"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Edit" asp-route-id="@Model.usuarioId">Editar</a></li>
                    </ul>
                </div>
            </div>
            <div>
                <h5 style="color:black">Usuários Bloqueados:</h5>
                @foreach (Bloqueados bloqueado in ViewBag.Bloqueados)
                {
                    <form asp-controller="Bloqueados" asp-action="DeleteConfirmed" method="post">
                        <button type="submit" name="id" value="@bloqueado.idBloqueio" class="btn btn-outline-danger d-flex align-items-center">
                            <i class="bi bi-hand-thumbs-down-fill me-1">Desbloquear</i>
                        </button>
                    </form>
                }
            </div>
        </div>

        <hr />

        <h3>Postagens</h3>
                       

        <!-- Conteúdo das Tabs -->
        <div class="tab-content" id="pills-tabContent">
            <!-- Tab de Posts -->
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var post in ViewBag.Posts)
                    {
                        @if (post.usuarioId == Model.usuarioId)
                        {
                            <div class="col">
                                <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.postId" class="text-decoration-none text-dark">
                                    <div class="card shadow-sm post-card">
                                        @if (!string.IsNullOrEmpty(post.postArquivo))
                                        {
                                            @if (post.postArquivo.EndsWith(".mp4"))
                                            {
                                                <video controls class="card-img-top">
                                                    <source src="@Url.Content(post.postArquivo)" type="video/mp4">
                                                    Your browser does not support the video tag.
                                                </video>
                                            }
                                            else
                                            {
                                                <img src="@Url.Content(post.postArquivo)" class="card-img-top" alt="Post Image">
                                            }
                                        }
                                        <div class="card-body">
                                            @post.postTxt
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .post-card {
        border-radius: 0;
        overflow: hidden;
        position: relative;
    }

        .post-card img,
        .post-card video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .post-card .card-body {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: rgba(0, 0, 0, 0.5);
            color: #fff;
            padding: 10px;
        }

    .profile-card {
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 8px;
    }
</style>