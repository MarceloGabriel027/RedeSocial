@model IEnumerable<RedeSocial.Models.Post>

@{
    ViewBag.Title = "Posts";
}

<div class="outer-border">
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
            <div class="container">
                <div class="row justify-content-center">
                    @foreach (var post in Model)
                    {
                        if (!(ViewBag.IdsBloqueados.Contains(post.usuarioId)))
                        {
                            if (post.postStatus == "0")
                            {
                                <div class="card-body">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h5 class="card-title mb-0 color-black">@post.usuarioPost.usuarioNome</h5>
                                            @if (post.usuarioId != ViewBag.UserId)
                                            {
                                                <div class="dropdown">
                                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="bi bi-gear"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                                        <li>
                                                            <form asp-controller="Bloqueados" asp-action="Create" method="post" style="display:inline;">
                                                                <input type="hidden" name="id" value="@post.usuarioId" />
                                                                <button type="submit" class="dropdown-item">Bloquear</button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>                          
                                            }
                                        </div>
                                    </div>
                                    <div card-footer class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 d-flex align-items-stretch">
                                        <a asp-action="Details" asp-route-id="@post.postId" style="text-decoration: none; width: 100%;">
                                            <div class="post-card">
                                                @if (!string.IsNullOrEmpty(post.postArquivo))
                                                {
                                                    @if (!post.postArquivo.Contains(".mp4"))
                                                    {
                                                        <img src="@Url.Content(post.postArquivo)" class="img-fluid rounded-img" alt="Post Image" />
                                                    }
                                                    else
                                                    {
                                                        <video src="@Url.Content(post.postArquivo)" class="img-fluid rounded-video">
                                                            Your browser does not support the video tag.
                                                        </video>
                                                    }
                                                }
                                                <div class="post-overlay">
                                                    <div class="post-content">
                                                        @post.postTxt
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            }                            
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .color-black {
        color: black;
    }

    .outer-border {
        border: 1px solid #ddd; /* Define a borda aqui */
        border-radius: 15px; /* Opcional: arredonda os cantos da borda */
        padding: 20px; /* Adiciona algum espaçamento interno */
        margin: 20px; /* Adiciona algum espaçamento externo */
    }

    .post-card {
        position: relative;
        overflow: hidden;
        border-radius: 30px;
        margin: 5px;
        text-align: center;
        color: #fff;
        display: flex;
        /* flex-direction: column; */
        justify-content: center;
        height: 100%;
        
    }

    .post-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.7); /* Transparência para a barrinha */
        padding: 10px;
        box-sizing: border-box;
        transition: opacity 0.3s ease;
        opacity: 0; /* Inicia transparente para efeito de hover */
    }

    .post-card:hover .post-overlay {
        opacity: 1; /* Exibe a barrinha ao passar o mouse sobre o post */
    }

    .post-content {
        text-align: left;
    }

    .post-title {
        font-size: 1.2em;
        margin-bottom: 5px;
    }

    .post-desc {
        font-size: 1em;
        margin: 0;
    }

    .rounded-img, .rounded-video {
        width: 100%;
        height: auto;
        border-radius: 30px;
        object-fit: cover;
    }
</style>